# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/lms-database

# API Security - Use same HEADERSAPIKEY as main backend
# This authenticates both incoming requests and outgoing requests to main backend
HEADERSAPIKEY=your-headers-api-key-here

# Bunny Stream Configuration
BUNNY_LIBRARY_ID=484458
BUNNY_API_KEY=your-bunny-api-key
BUNNY_TUS_ENDPOINT=https://video.bunnycdn.com/tusupload
IS_BUNNY_ENABLED=true

# Main Backend Configuration (for calling 100ms recording endpoint)
MAIN_BACKEND_URL=http://localhost:3000

# Upload Configuration
MAX_CONCURRENT_UPLOADS=3
RETRY_ATTEMPTS=3
DOWNLOAD_TIMEOUT=300000
UPLOAD_TIMEOUT=600000
TEMP_UPLOAD_DIR=./uploads
